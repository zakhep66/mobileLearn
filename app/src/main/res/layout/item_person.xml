<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fab_margin">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fab_margin"
    android:layout_marginHorizontal="@dimen/basic_padding"
    android:background="@color/light_gray"
    android:orientation="vertical"
    android:padding="@dimen/basic_padding"
    android:id="@+id/cardId"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/basic_padding">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/person1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            android:id="@+id/picture"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fab_margin"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/main_text"
                tools:ignore="MissingConstraints"
                android:id="@+id/name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/fab_margin"
                android:text="@string/date"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                tools:ignore="MissingConstraints"
                android:id="@+id/date"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:textColor="@color/black"
        android:textSize="@dimen/main_text"
        android:layout_marginStart="@dimen/basic_padding"
        android:layout_marginTop="@dimen/margin_top_item"
        android:id="@+id/info"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/gender"
            android:textColor="@color/primary_blue"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/basic_padding"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:id="@+id/gender"
            android:textAllCaps="true"/>

        <Button
            android:background="@drawable/like"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/like_size"
            android:layout_height="@dimen/like_size"
            android:id="@+id/like"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

