<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.hw6.fragments.list.ListFragment"
        android:label="Список Нодов"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_relationFragment"
            app:destination="@id/relationFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.hw6.fragments.add.AddFragment"
        android:label="Добавить фрагмент"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/relationFragment"
        android:name="com.example.hw6.fragments.RelationFragment"
        android:label="Связи"
        tools:layout="@layout/fragment_relation" >
        <action
            android:id="@+id/action_relationFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentNode"
            app:argType="com.example.hw6.data.Node" />
    </fragment>
</navigation>